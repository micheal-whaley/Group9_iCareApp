@{
    string error = (string)ViewData["error"];
}

<div class="text-center">
    <h1 class="display-4">Document Upload</h1>
</div>

<p>Only PNGs, JPEGs, Microsoft Word documents, and PDFs will be accepted to be uploaded. </p>

<div class="container">
    <div class="mb-3 mt-3">
        <form asp-controller="ManageDocument" asp-action="UploadFile" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Upload File</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>

@if (error.Equals("repeat"))
{
    <p>File is already in database.</p>
    <div class="status-message">File is already in database.</div>
}