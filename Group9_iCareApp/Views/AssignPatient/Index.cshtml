@model List<Group9_iCareApp.Models.PatientRecord>

@{
    ViewData["Title"] = "Assign Patients to Workers";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Date of Birth</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Blood Group</th>
            <th>Treatment Area</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Fname</td>
                <td>@patient.Lname</td>
                <td>@patient.Address</td>
                <td>@patient.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>@patient.Height</td>
                <td>@patient.Weight</td>
                <td>@patient.BloodGroup</td>
                <td>@patient.TreatmentArea</td>
                <td>@patient.Location?.Name</td>  <!-- Adjust field for location -->
            </tr>
        }
    </tbody>
</table>
