@model List<Group9_iCareApp.Models.PatientRecord>

@{
    ViewData["Title"] = "Assign Patients to Workers";
}

<h1>Assign Patients to Workers</h1>

<form method="post" action="/AssignPatient/assign">
    <div>
        <label for="workerId">Worker ID:</label>
        <input type="number" name="WorkerId" id="workerId" required />
    </div>

    <div>
        <h3>Patient List</h3>
        @if (Model != null && Model.Any())
        {
            <ul>
                @foreach (var patient in Model)
                {
                    <li>
                        <input type="checkbox" name="PatientIds" value="@patient.Id" />
                        @patient.Fname (ID: @patient.Id)
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No patients available to assign.</p>
        }
    </div>

    <button type="submit">Assign Selected Patients</button>
</form>
