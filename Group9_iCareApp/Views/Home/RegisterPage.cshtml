@{
    ViewData["Title"] = "Register";
}

@model Group9_iCareApp.Models.iCAREUser

<div class="text-center">
    <h1 class="display-4">Sign up</h1>

</div>

    <form asp-action="LoginForm" asp-controller="Home">
    <label class="mt-4">ID</label>
    <input class="form-control" type="number" placeholder="2" asp-for="Id" />
        <label class="mt-4">Username</label>
        <input class="form-control mt-4" type="text" placeholder="Enter your name" asp-for="Username" />
    <label class="mt-4">First name</label>
    <input class="form-control mt-4" type="text" placeholder="Enter your name" asp-for="Fname" />
    <label class="mt-4">Last name</label>
    <input class="form-control mt-4" type="text" placeholder="Enter your name" asp-for="Lname" />
        <label class="mt-4">Password</label>
        <input class="form-control mt-4" type="password" placeholder="We won't look!" asp-for="Password" />
    <label class="mt-4">Location ID</label>
    <input class="form-control" type="number" placeholder="2" asp-for="LocationId" />
        <button type="submit" class="btn btn-primary mt-4">Sign up</button>
    </form>